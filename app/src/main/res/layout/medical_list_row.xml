<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/doctor"
            android:id="@+id/prescriptionImage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prescriptionImage"
            android:text="Dr. Farabi"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/doctor"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/prescriptionImage"
                android:layout_below="@id/doctor"
                android:text="Medicine"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/detailsDoctor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/prescriptionImage"
                android:layout_below="@id/detailsDoctor"
                android:text="13-08-1994"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/date"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>